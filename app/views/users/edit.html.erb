<div class="title"><h1>Editing <%= @user.name %></h1></div>
<div class="box_wrap">
  <div class="box">
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li class="error"><%= msg %></li>
      <% end %>
    </ul>
  <%= form_for @user, url: {action: "update"}, html: {class: "whatever"} do |f|%>
  <%= f.hidden_field :id %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "Save changes to this user" %>
  <% end %>
  </div>
</div>
<button>
  <a href="/users/">Back to all users</a>
</button>